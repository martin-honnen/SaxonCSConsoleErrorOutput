<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SaxonCSConsoleErrorOutput.MainWindow"
        Title="SaxonCSConsoleErrorOutput">
  <Grid RowDefinitions="30,*,*" ColumnDefinitions="*,*">
    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
      <!--<Button Click="netParsing_Clicked">Test .NET XML parsing</Button>
      <Button Click="saxonParsing_Clicked">Test Saxon DocumentBuilder</Button>-->
      <Button Click="netXslt_Clicked">Test .NET XSLT</Button>
      <Button Click="saxonXslt_Clicked">Test Saxon XSLT</Button>
    </StackPanel>
    <TextBox x:Name="XmlCode" Grid.Row="1" Grid.Column="0" Text="&lt;Root/&gt;"/>
    <TextBox x:Name="XsltCode" Grid.Row="1" Grid.Column="1" Text=""/>
    <TextBox x:Name="Result" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text=""/>
  </Grid>
</Window>
